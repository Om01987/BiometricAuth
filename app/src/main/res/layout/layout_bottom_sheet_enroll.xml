<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Enrollment"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#334155"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F1F5F9"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID:"
            android:textColor="#64748B"/>

        <TextView
            android:id="@+id/txtDialogUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER_001"
            android:textColor="#334155"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name"
        android:textColor="#64748B"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/edtDialogUserName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F8FAFC"
        android:paddingHorizontal="12dp"
        android:hint="e.g. Om kumar"
        android:inputType="textPersonName"
        android:textColor="#334155"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDialogCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:backgroundTint="#F1F5F9"
            android:textColor="#64748B"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnDialogStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Enrollment"
            android:backgroundTint="@color/mantra_accent"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>